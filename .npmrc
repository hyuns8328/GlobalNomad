# 패키지 설치 구조를 팀 전체 동일하게 유지
node-linker=hoisted

# 루트 node_modules로 노출할 패키지 패턴 (ESLint/Prettier/Tailwind/Types만)
public-hoist-pattern=["*eslint*", "*prettier*", "@types/*", "*tailwind*"]

# peerDependencies 자동 설치 (React/Tailwind 환경에서 매우 유용)
auto-install-peers=true

# pnpm lockfile 포맷
lockfile-format=5

# peerDependency 충돌을 엄격하게 막지 않음
strict-peer-dependencies=false

# 패키지 레졸브 안정화
shamefully-hoist=false

# 캐시 관련 최적화
modules-cache-max-age=0
